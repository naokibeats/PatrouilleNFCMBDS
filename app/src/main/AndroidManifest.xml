            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mbds.material.PatrouilleNFC.MainActivity" />
        </activity>
        <activity
            android:name="com.mbds.material.PatrouilleNFC.TabProfil"
