<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date permis : "
        android:id="@+id/datepermis"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie A : "
        android:id="@+id/cata"
        android:textColor="#000"
        android:layout_below="@+id/datepermis"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie B : "
        android:id="@+id/catb"
        android:textColor="#000"
        android:layout_below="@+id/cata"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie C : "
        android:id="@+id/catc"
        android:textColor="#000"
        android:layout_below="@+id/catb"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie D: "
        android:id="@+id/catd"
        android:textColor="#000"
        android:layout_below="@+id/catc"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie E : "
        android:id="@+id/cate"
        android:textColor="#000"
        android:layout_below="@+id/catd"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catégorie F : "
        android:id="@+id/catf"
        android:textColor="#000"
        android:layout_below="@+id/cate"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>
</RelativeLayout>
